 <Metadata/>
 <Resources>
       <!--Miscellaneous Fixes-->
  <Resource>
   <StreamingFiles>Miscellaneous/An Honest Bandana</StreamingFiles>
   <StreamingFiles>Miscellaneous/Bath Fix</StreamingFiles>
